FROM python:3.9-slim

WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# 安装依赖
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 拷贝应用代码
COPY . .

# 配置环境变量
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV PORT=8000

# 暴露端口
EXPOSE 8000

# 创建启动脚本
RUN echo '#!/bin/bash\necho "Starting application on port $PORT"\necho "Environment: $ENV"\necho "Database URL: ${SUPABASE_DB_URL:0:50}..."\nuvicorn app.main:app --host 0.0.0.0 --port $PORT --log-level info' > /app/start.sh
RUN chmod +x /app/start.sh

# 启动应用
CMD ["/app/start.sh"]
